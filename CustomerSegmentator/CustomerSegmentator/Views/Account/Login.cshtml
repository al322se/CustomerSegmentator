@model CustomerSegmentator.Controllers.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Login</h1>
<hr />
<div class="row">
    <div class="col-md-4">
      <form asp-action="Login" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          <div class="form-group p-2">
              <input asp-for="Username" class="form-control login-input" placeholder="Username"/>
              <span asp-validation-for="Username" class="text-danger"></span>
          </div>
            <div class="form-group  p-2">
                <input asp-for="Password" class="form-control login-input" type="password" placeholder="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group  p-2">
                <input type="submit" value="Sign In" class="btn add-button" />
            </div>
        </form>
    </div>
</div>